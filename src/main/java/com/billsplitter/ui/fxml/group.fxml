<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.billsplitter.ui.controller.GroupController" spacing="10">
    <TextField fx:id="groupNameField" promptText="Group Name"/>
    <TextField fx:id="userNameField" promptText="User Name"/>
    <TextField fx:id="userPhoneField" promptText="User Phone"/>
    <Button text="Add User" onAction="#addUser"/>
    <ListView fx:id="userList"/>
    <Button text="Create Group" onAction="#createGroup"/>
</VBox>